@model IEnumerable<Kaucja.Models.ClientBankAccountModel>

@{
    Layout = null;
}

<p>
    <a asp-action="Create" asp-controller="ClientBankAccount">Dodaj</a>
</p>
<table class="table table-bordered table-hover table-responsive table-striped d-md-table">
    <thead>
        <tr class="text-center">
            <th>
                Lp
            </th>
            <th>
                Nazwa konta
            </th>
            <th>
                Waluta
            </th>
            <th>
                Bank
            </th>
            <th>
                Nr konta
            </th>
            <th>
                Swift
            </th>
            <th>
                Aktywne
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Lp)
            </td>
            <td class="text-left">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Bank)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Swift)
            </td>
            @if (item.Active == true)
            {
                <td class="text-center">
                    <img src="~/Images/active.svg" />
                </td>
                <td class="text-center">
                    <a href="Edit/@item.Id"><img src="~/Images/edit.svg" /></a>
                </td>
            }
            else
            {
                <td class="text-center">
                    <img src="~/Images/deactive.svg" />
                </td>
                <td class="text-center">
                    <a href="Edit/@item.Id"><img src="~/Images/edit.svg" /></a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>